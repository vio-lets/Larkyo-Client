{
  "name": "react-express-starter",
  "version": "0.0.1",
  "description": "React + Express starter template",
  "main": "src/main.js",
  "homepage": "https://github.com/bharani91/react-express-starter",
  "author": "Bharani M",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bharani91/react-express-starter"
  },
  "keywords": [
    "react",
    "express",
    "postcss",
    "starter template"
  ],
  "scripts": {
    "start": "better-npm-run start",
    "build:start": "better-npm-run build:start",
    "build": "rimraf dist && better-npm-run build",
    "postinstall": "npm run build"
  },
  "standard": {
    "globals": [
      "__DEV__"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-no-bind": 2,
      "react/no-did-update-set-state": 2,
      "react/no-unknown-property": 2,
      "react/prop-types": 2
    }
  },
  "betterScripts": {
    "start": {
      "command": "node config/server.development",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "webpack --config config/webpack.config.production.js --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:start": {
      "command": "node config/server.production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "guid": "0.0.12",
    "react-hot-loader": "^1.3.0",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.2",
    "redbox-react": "^1.2.2",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.7.1"
  },
  "dependencies": {
    "autoprefixer": "^6.0.2",
    "axios": "^0.16.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "babel-runtime": "^6.5.0",
    "better-npm-run": "0.0.7",
    "bootstrap-loader": "^1.0.10",
    "bootstrap-sass": "^3.3.6",
    "chart.js": "^1.1.1",
    "css-loader": "^0.19.0",
    "express": "^4.12.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.9.0",
    "lodash": "^4.5.0",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.6.0",
    "postcss-nested": "^1.0.0",
    "react": "^0.14.7",
    "react-chartjs": "^0.8.0",
    "react-dom": "^0.14.7",
    "react-icons": "^2.2.3",
    "react-router": "^2.0.0",
    "resolve-url-loader": "^1.4.3",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.68.3",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14"
  }
}
